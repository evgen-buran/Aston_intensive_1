<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:text="@string/app_name"
        android:textColor="@color/onBackground"
        android:textSize="@dimen/title_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginEnd="@dimen/app_margin"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageButton
            android:id="@+id/btnPrevTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginRight="@dimen/buttons_margin"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:paddingTop="@dimen/app_margin"
            android:paddingBottom="@dimen/app_margin"
            android:src="@drawable/baseline_skip_previous_24" />

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginRight="@dimen/buttons_margin"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:paddingTop="@dimen/app_margin"
            android:paddingBottom="@dimen/app_margin"
            android:src="@drawable/baseline_play_arrow_24" />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginRight="@dimen/buttons_margin"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:paddingTop="@dimen/app_margin"
            android:paddingBottom="@dimen/app_margin"
            android:src="@drawable/baseline_pause_24" />

        <ImageButton
            android:id="@+id/btnNextTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginRight="@dimen/buttons_margin"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:paddingTop="@dimen/app_margin"
            android:paddingBottom="@dimen/app_margin"
            android:src="@drawable/baseline_skip_next_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>